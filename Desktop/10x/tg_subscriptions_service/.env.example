# Required
TG_BOT_TOKEN=123456:ABCDEF...
TG_ENV=dev

# Service bind
TG_SVC_HOST=127.0.0.1
TG_SVC_PORT=8090
TG_SVC_DB_PATH=./data/tg_subscriptions.db

# Webhook
TG_WEBHOOK_PATH=/telegram/webhook
TG_WEBHOOK_SECRET=change-me
TG_WEBHOOK_BASE_URL=https://your-domain.example
TG_AUTO_SET_WEBHOOK=0

# Optional support text shown by /support
TG_SUPPORT_TEXT=Support: @your_support_username

# Secure admin API for WB token onboarding (server-to-server only)
TG_ADMIN_API_TOKEN=change-me-admin-token

# Backend onboarding bridge (backend_compat)
TG_BACKEND_API_BASE=http://127.0.0.1:8080/api
# One of TG_BACKEND_API_KEY or TG_BACKEND_BEARER_TOKEN is required
TG_BACKEND_API_KEY=change-me-backend-api-key
TG_BACKEND_BEARER_TOKEN=
TG_HTTP_TIMEOUT_SECONDS=20
TG_HTTP_RETRIES=2
TG_WEBHOOK_DEDUPE_RETENTION_DAYS=30

# Plans JSON (amount_int is smallest units for Telegram payments)
# For Telegram Stars use currency XTR.
TG_PLANS_JSON=[{"code":"pro_monthly","title":"PRO 30 days","description":"Access for 30 days","amount_int":1500,"currency":"XTR","period_days":30}]
